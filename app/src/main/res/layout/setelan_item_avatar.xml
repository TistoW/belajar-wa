<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/bar_atas_setelan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_alignParentStart="true"
            android:id="@+id/kembali"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_west_24"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/Avatar" />

    </RelativeLayout>
    <View
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/baseline_komunitas_24"/>

        <TextView
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:layout_above="@+id/buat_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katakan lebih banyak dengan Avatar sekarang di"/>

        <TextView
            android:gravity="center"
            android:layout_above="@+id/buat_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_WhatsApp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/buat_avatar"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/Hijau_sedang">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Avatar Anda"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="46dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pelajari selengkapnya"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textColor="#0337F4"/>

        <View
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#0337F4"/>

    </RelativeLayout>



</LinearLayout>