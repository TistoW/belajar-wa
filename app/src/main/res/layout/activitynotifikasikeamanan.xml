<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bar_atas_setelan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/baseline_west_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/btnKembali"
            android:text="Notifikasi_keamanan"
            android:textSize="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/gray" />

    <ImageView
        android:layout_marginVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/baseline_enhanced_encryption_24"/>
    <TextView
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Chat dan panggilan Anda bersifat Privat"/>

    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Enkripsi end-to-end menjaga agar pesan dan panggilan pribadi  Anda hanya diketahui oleh Anda dan pengguna yang Anda pilih, bahkan WhatsApp tidak dapat membaca atau mendengarkannya. Ini termasuk:"/>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan teks dan suara"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panggilan suara dan vidio"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto, vidio, dan dokumen"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berbagi lokasi"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingVertical="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembaruan status"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="15dp"
        android:text="Pelajari selengkapnya"
        android:textColor="#0459A3"
        android:textSize="12dp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/tvmargin"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Tampilan notifikasi keamanan di perangkat ini"/>


        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:checked="true"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <TextView
            android:layout_below="@+id/tvmargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dapatkan notifikasi ketika kode keamanan Anda berubah untuk salah satu kontak di chat yang terenkripsi secara end-to-end. Jika Anda memiliki beberapa perangkat , setelan ini harus diaktifkan disetiap perangkat yang Anda ingin notofikasi diaktifkan"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelajari selengkapnya"
            android:textColor="#0459A3"
            android:textSize="12dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>